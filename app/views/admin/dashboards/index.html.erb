<div class="m-4">
  <h3>ユーザー一覧</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>名前</th>
        <th>email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mt-2">
    <%= paginate @users %>
  </div>
</div>