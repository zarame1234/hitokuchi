<!DOCTYPE html>
<html>
<head>
  <title>Admin - hitokuchi</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="m-2">
  <% if admin_signed_in? %>
    <div class="text-right m-3">
      <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"btn btn-sm btn-info" %>
    </div>
  <% end %>
  <%= yield %>
</body>
</html>