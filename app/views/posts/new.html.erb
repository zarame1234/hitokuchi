<h1>画像投稿</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました。
  <ul>
    <% post.errors.full_messages.each do |message| %>       
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 

<%= form_with model: @post do |f| %>
  <%= f.file_field :image, accept: "image/*", class: "W-100" %>
  <div class="form-group">
    <label>店名</label>
    <%= f.text_field :shop_name, autofocus: true, class: "form-control", placeholder: "ショップ名"%>
  </div>
  <div class="form-group">
    <label>コメント</label>
    <%= f.text_area :body, class: "form-control", placeholder: "コメントここに" %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: "btn btn-success" %>
  </div>
<% end %>
  