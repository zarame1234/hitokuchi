<h4>新規投稿</h4>

<% if @post.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= @post.errors.count %>件のエラーが発生しました。
    <ul>
      <% @post.errors.full_messages.each do |message| %>       
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 

<%= form_with model: @post do |f| %>
  <%= f.file_field :image, accept: "image/*", class: "W-100" %>
  </div>
  <div class="form-group">
    <label>店名</label>
    <p><%= f.text_field :shop_name, autofocus: true, class: "form-control col-6", placeholder: "ショップ名" %></p>
  </div>
  <div class="form-group">
    <label>コメント</label>
    <p><%= f.text_area :body, class: "col-6 form-control", placeholder: "コメントここに" %></p>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: "btn btn-info" %>
  </div>
<% end %>
  