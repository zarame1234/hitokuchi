<% if @post.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= @post.errors.count %>件のエラーが発生しました。
    <ul>
      <% @post.errors.full_messages.each do |message| %>       
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 
<h4>新規投稿</h4>
<%= form_with model: @post do |f| %>
  <div class="form-group">
    <label>写真</label>
    <p><%= f.file_field :image, accept: "image/*", class: "W-100" %></p>
  </div>
  <div class="form-group">
    <label>店名</label>
    <p><%= f.text_field :shop_name, autofocus: true, class: "form-control col-6", placeholder: "ショップ名" %></p>
  </div>
  <div class="form-group">
    <label>郵便番号</label>
    <p><%= text_field_tag :zipcode, nil, autofocus: true, class: "form-control col-6", placeholder: "郵便番号" %></p>
  </div>
  <div class="form-group">
    <label>住所</label>
    <p><%= f.text_field :address, autofocus: true, class: "form-control col-6", placeholder: "住所" %></p>
  </div>
  <div class="form-group">
    <label>コメント</label>
    <p><%= f.text_area :body, class: "col-6 form-control", placeholder: "コメントここに" %></p>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: "btn btn-info" %>
  </div>
<% end %>
<%= javascript_pack_tag "jpostal",  'data-turbolinks-track': 'reload' %>