<h3>検索結果</h3>
<div class="container-fuild m-4">
  <% if @model == "user" %>
    <div class="row">
      <table class="table table-hover mx-5">
        <thead>
          <tr>
            <th class="col-2">プロフィール写真</th>
            <th class="col-2">名前</th>  
            <th class="col-1"></th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(65, 65) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>

    <div class="row justify-content-center justify-content-sm-start" >
      <% @records.each do |post| %>
        <div class="card">
          <div class="card-body index_post">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image, class:"index_post_image rounded" %>
            <% end %>
            <div class="card-text mt-1">
              <%= link_to user_path(post.user_id) do %>
                <%= image_tag post.user.get_profile_image(40,40) %>
              <% end %>
              <p class="text-truncate"><b>
                <i class="fa-regular fa-font-awesome"></i>
                <%= post.shop_name %></b>
              </p>
              <p class="text-truncate" ><%= post.body %></p>
              <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
            </div>
          </div>
        </div>
      <% end %>  
    </div>
  <% end %>
</div>
