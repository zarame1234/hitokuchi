<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= @user.errors.count %>件のエラーが発生しました。
  <ul>
    <% @user.errors.full_messages.each do |message| %>       
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<h4>プロフィール編集</h4>
<%= form_with model:@user do |f| %>
  <div class="form-group">
    <label>プロフィール写真</label><br>
    <%= f.file_field :profile_image, accept: "image/*", class: "W-100" %>
  </div>
  <div class="form-group">
    <label>名前</label><br>
    <%= f.text_field :name, autofocus: true, class: "form-control col-6", placeholder: "名前" %>
  </div>
  <div class="form-group">
    <label>自己紹介</label><br>
    <%= f.text_area :introduction, class: "form-control col-6", rows: "3", placeholder: "自己紹介をここに記入" %>
  </div>
  <div class="form-group">
    <%= f.submit '更新', class: "btn btn-info" %>
  </div>
<% end %>
<span><%= link_to "<<戻る", user_path(@user) %> </span>