
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-5">
          <div>
            <%=  image_tag @user.get_profile_image(100,100) %>
          </div>
          <div>
            <p>name :  <%= @user.name %></p>
            <p>自己紹介 :   <%= @user.introduction %></p>
            <% if @user.email != "guest@example.com" && (@user == current_user) %>
            <%= link_to "プロフィール更新", edit_user_path(current_user) %>
            <% end %>
          </div>
      </div>
  
      <div class="d-flex flex-wrap col-md-8" >
        <% @posts.each do |post| %>
          <div class="m-1 card" >
            <div class="card-body" >
              <%= link_to post_path(post) do %>
                <%= image_tag post.get_image(200,200), class:"rounded-top" %>
              <% end %><br>
              <%= post.shop_name %>
            </div>
          </div>
        <% end %>
      </div>  
    </div>
  </div>
  

