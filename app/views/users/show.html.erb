<div class="container-fuild">
    <div class="row">
      <div class="col-md-3 col-lg-2 mb-3 bg-danger">
          <div class="row p-4">
            <div class="col-4 col-md-12">
              <%=  image_tag @user.get_profile_image(150,150), class:"rounded" %>
            </div>
            <div classs="col-8 col-md-12">
              <p>
                <i class="fa-regular fa-circle-user"></i>
                <%= @user.name %>
              </p>
              <p>自己紹介</p>
              <p><%= @user.introduction %></p>
              <% if @user.email != "guest@example.com" && (@user == current_user) %>
              <%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn-info btn-sm" %>
              <% end %>
            </div>
          </div>
      </div>

      <div class="col-sm-10 col-md-9 clo-lg-9  mx-auto" >
        <h3><ins>post</ins></h3>
        <div class="d-flex flex-wrap ">
        <% @posts.each do |post| %>
          <div class="card" style="width: 13rem;" >
            <div class="card-body" >
              <%= link_to post_path(post) do %>
                <%= image_tag post.get_image, class:"rounded img-fluid" %>
              <% end %><br>
              <i class="fa-regular fa-font-awesome"></i>
              <%= post.shop_name %>
            </div>
          </div>
        <% end %>
        </div>
      </div>  
    </div>
  </div>
  

